<div class="<%= class_names %> flex flex-col hidden justify-center space-x-3 items-center mb-4 md:flex-row" data-controller="time-zone">
  <div class="flex justify-center md:justify-end md:w-1/3">
    <%= form.label :timezone, t('shared.time_zone_select.timezone'), class: "text-base font-medium text-gray-700 dark:text-gray-100 capitalize" %>
  </div>
  <div class="flex flex-col items-center md:items-start md:w-5/6">
    <%= form.text_field :timezone, data: {"time_zone_target" => "tz"}, class: "shadow-md rounded-md border border-gray-400 focus:outline-blue-400 px-3 py-2 w-1/2 #{'border-red-500' if form.object.errors[:timezone].any?}" %>
  </div>
</div>