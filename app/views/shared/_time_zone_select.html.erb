<div class="<%= class_names %> flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
  <div class="flex justify-end md:w-1/3" data-controller="time-zone">
    <%= form.label :timezone, "TimeZone: ", class: "text-base font-medium text-gray-700 dark:text-gray-100 capitalize" %>
  </div>
  <div class="flex flex-col justify-center md:w-5/6">
    <%= form.text_field :timezone, data: {"time_zone_target" => "tz"}, class: "shadow-md rounded-md border border-gray-400 focus:outline-blue-400 px-3 py-2 w-1/2 #{'border-red-500' if form.object.errors[:timezone].any?}" %>
  </div>
</div>