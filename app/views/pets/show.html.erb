<% content_for :title, t(".title", petname: @pet.petname.split(" ").map(&:capitalize).join(" ")) %>

<div class="container mx-auto w-full md:w-1/2">
  <div class="flex flex-col justify-center text-center mb-3">
    <h1 class="text-center font-bold text-4xl mb-4"><%= t(".title", petname: @pet.petname.split(" ").map(&:capitalize).join(" ")) %></h1>
  </div>
  <div class="flex flex-col justify-center items-center px-6 mb-4 border border-2 border-slate-300 rounded-lg shadow-lg">
    <div class="flex flex-col justify-center mx-auto">
      <%= render @pet %>
    </div>

    <div class="flex flex-col justify-center gap-4 mb-4 md:flex-row border-t-2 border-slate-200 pt-4">
      <%= link_to t(".edit_profile", petname: @pet.petname.capitalize), edit_pet_path(@pet), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 text-green-600 bg-green-200 border-2 border-green-200 transition duration-300 ease-in-out hover:scale-110 hover:bg-gray-100 hover:text-green-600 hover:border-green-600 inline-block font-medium capitalize cursor-pointer" %>
      <%= link_to t(".back_to_cat_list", username: Current.user.username.split(" ").map(&:capitalize).join(" ")), pets_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 text-blue-600 bg-blue-200 border-2 border-blue-200 transition duration-300 ease-in-out hover:scale-110 hover:bg-gray-100 hover:text-blue-600 hover:border-blue-600 inline-block font-medium capitalize cursor-pointer" %>
      <%= button_to t(".destroy_profile", petname: @pet.petname), @pet, method: :delete, form_class: "sm:inline-block sm:w-auto", class: "w-full items-center rounded-md px-3.5 py-2.5 text-red-600 bg-red-200 border-2 border-red-200 transition duration-300 ease-in-out hover:scale-110 hover:bg-gray-100 hover:text-red-600 hover:border-red-600 font-medium cursor-pointer capitalize cursor-pointer", data: { turbo_confirm: t(".confirm") } %>
    </div>
  </div>
</div>
