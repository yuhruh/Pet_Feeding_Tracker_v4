<%= form_with(model: pet, id: "pet-form", class: "contents") do |form| %>
  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <%= render 'shared/errors', obj: @pet %>
  </div>

  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <div class="flex justify-center md:justify-end md:w-1/3">
      <%= form.label :pet_avatar, class: "text-sm font-medium text-gray-700 dark:text-gray-100 capitalize optional md:text-base"%>
    </div>
    <div class="flex flex-col items-center md:items-start md:w-5/6">
      <%= form.file_field :pet_avatar, direct_upload: true %>
    </div>
  </div>

  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <div class="flex justify-center md:justify-end md:w-1/3">
      <%= form.label :petname, class: "text-sm font-medium text-gray-700 dark:text-gray-100 capitalize required md:text-base" %>
    </div>
    <div class="flex flex-col items-center md:items-start md:w-5/6">
      <%= form.text_field :petname, required: true, class: ["shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:petname].none?, "border-red-400 focus:outline-red-600": pet.errors[:petname].any?}] %>
      <span class="mt-2 text-sm italic">Pet Name contains at least 2 charaters.</span>
    </div>
  </div>

  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <div class="flex justify-center md:justify-end md:w-1/3">
      <%= form.label :birthday, class: "text-sm font-medium text-gray-700 dark:text-gray-100 capitalize optional md:text-base"  %>
    </div>
    <div class="flex flex-col items-center md:items-start md:w-5/6">
      <%= form.date_field :birthday, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:birthday].none?, "border-red-400 focus:outline-red-600": pet.errors[:birthday].any?}] %>
    </div>
  </div>

  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <div class="flex justify-center md:justify-end md:w-1/3">
      <%= form.label "weight (kg)", class: "text-sm font-medium text-gray-700 dark:text-gray-100 capitalize required md:text-base"  %>
    </div>
    <div class="flex flex-col items-center md:items-start md:w-5/6">
      <%= form.number_field :weight, max: 100, min: 0.0, step: :any, required: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:weight].none?, "border-red-400 focus:outline-red-600": pet.errors[:weight].any?}] %>
      <span class="mt-2 text-sm italic">Enter number ranges from 0 ~ 100.</span>
    </div>
  </div>

  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <div class="flex justify-center md:justify-end md:w-1/3">
      <%= form.label :gender, class: "text-sm font-medium text-gray-700 dark:text-gray-100 capitalize required md:text-base"  %>
    </div>
    <div class="flex flex-col item-center md:items-start md:w-5/6">
      <%= form.select :gender, ["â™‚ï¸ Male", "â™€ï¸ Female", "ğŸ™Š Rather Not to Answer"], { prompt: "Please Select Cat's Gender" }, required: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:gender].none?, "border-red-400 focus:outline-red-600": pet.errors[:gender].any?}] %>
    </div>
  </div>

  <div class="flex flex-col justify-center space-x-3 items-center mb-4 md:flex-row">
    <div class="flex justify-center md:justify-end md:w-1/3">
      <%= form.label :breed, class: "text-sm font-medium text-gray-700 dark:text-gray-100 capitalize optional md:text-base"  %>
    </div>
    <div class="flex flex-col item-center md:items-start md:w-5/6">
      <%= form.text_field :breed, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pet.errors[:breed].none?, "border-red-400 focus:outline-red-600": pet.errors[:breed].any?}] %>
    </div>
  </div>
  
<% end %>
