<% content_for :title, "Edit #{@pet.petname.split(" ").map(&:capitalize).join(" ")}'s Profile" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing pet</h1>

  <%= render "form", pet: @pet %>

  <%= link_to "Show this pet", @pet, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to pets", pets_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
