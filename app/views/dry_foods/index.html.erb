<% content_for :title, "Dry Foods Storage" %>

<div class="container mx-auto w-full overflow-auto shadow-lg rounded-xl mb-4 md:w-5/6">
  <div class="flex flex-col justify-center items-center mb-3">
    <h1 class="text-center font-bold text-2xl mt-5 capitalize md:text-4xl">Dry foods Storage List</h1>
  </div>

  <div class="flex flex-row justify-center items-center space-x-3">
    <%= image_tag('add_dry_food_removebg.png', width:'50px', height: '50px') %>
    <%= link_to "add dry food", new_dry_food_path, class: "text-sky-500 text-lg underline decoration-2 decoration-sky-500 font-bold transition duration-300 ease-in-out hover:scale-110 capitalize md:text-xl" %>
  </div>

  <div id="dry_foods" class="flex flex-col gap-8 justify-center items-center mt-4 lg:flex-row">
    <% if @dry_foods.any? %>
      <!-- Standard Table for Medium and Larger Screens -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="table-auto mb-2 px-2 w-full dark:bg-slate-200">
          <thead>
            <tr class="border-b-4 bg-gray-100 dark:bg-black">
              <th class="capitalize text-sm text-center p-2 dark:text-white">#</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">brand</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">description</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">type</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">Amount(g)</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">Total used amount(g)</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">average used amount(g)/ day</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">left amount(g)</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">expected running out</th>
              <th class="capitalize text-sm text-center p-2 dark:text-white">delete</th>
            </tr>
          </thead>
          <tbody>
            <% @dry_foods.select(&:persisted?).each_with_index do |food, idx| %>
              <tr class="border-b">
                <td class="capitalize text-sky-700 text-sm text-center font-semibold p-2"><%= idx+1 %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.brand %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.description %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.food_type %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.amount %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.total_ate_amount %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.average_used_amount %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.left_amount %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.days_remaining %></td>
                <td class="capitalize text-sky-700 text-sm text-center p-2">
                  <%= link_to(dry_food_path(food), data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete it?" }, id: "delete_dry_food_#{food.id}", class: "inline-block transition-transform text-red-400 hover:text-red-600 hover:scale-110") do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Transposed Table for Small Screens -->
      <div class="block lg:hidden overflow-x-auto">
        <table class="table-auto mb-2 px-2 w-full">
          <tbody>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">#</th>
              <% @dry_foods.select(&:persisted?).each_with_index do |food, idx| %>
                <td class="capitalize text-sky-700 text-sm text-center font-semibold p-2"><%= idx+1 %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">brand</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.brand %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">description</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.description %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">type</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.food_type %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">Amount(g)</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.amount %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">Total used amount(g)</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.total_ate_amount %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">average used amount(g)/ day</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.average_used_amount %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">left amount(g)</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.left_amount %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">expected running out</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2"><%= food.days_remaining %></td>
              <% end %>
            </tr>
            <tr class="border-b">
              <th class="capitalize text-sm text-left p-2 bg-gray-100 border-r-4">delete</th>
              <% @dry_foods.select(&:persisted?).each do |food| %>
                <td class="capitalize text-sky-700 text-sm text-center p-2">
                  <%= link_to(dry_food_path(food), data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete it?" }, id: "delete_dry_food_#{food.id}", class: "inline-block transition-transform text-red-400 hover:text-red-600 hover:scale-110") do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    <% else %>
      <h3 class="text-xl font-light text-center my-10 md:text-lg">You do not have any dry food. How about adding one to your storage list right now? ðŸ˜º</h3>
    <% end %>
  </div>
</div>