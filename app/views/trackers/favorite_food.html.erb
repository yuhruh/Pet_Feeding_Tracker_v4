<div class="flex justify-center">
  <% if @favorite_foods.blank? %>
    <div class="items-center p-8 mb-8 border-2 border-orange-200 bg-orange-100 rounded-lg shadow-lg">
      <h3 class="text-center text-gray-700 font-semibold md:text-lg"><span class="underline decoration-double"><%= t('trackers.favorite_food.no_record', petname: @pet.petname.capitalize) %></span></h3>
    </div>
  <% else %>
    <table class="border-collapse border border-slate-200 mb-4 dark:bg-slate-700">
      <thead>
        <tr class="bg-sky-100 dark:bg-slate-900">
          <th class="px-4 py-2 text-center capitalize border border-slate-300 dark:text-white"><%= t('trackers.favorite_food.food_type') %></th>
          <th class="px-4 py-2 text-center capitalize border border-slate-300 dark:text-white"><%= t('trackers.favorite_food.brand') %></th>
          <th class="px-4 py-2 text-center capitalize border border-slate-300 dark:text-white"><%= t('trackers.favorite_food.description') %></th>
          <th class="px-4 py-2 text-center capitalize border border-slate-300 dark:text-white"><%= t('trackers.favorite_food.favorite_score') %></th>
          <th class="px-4 py-2 text-center capitalize border border-slate-300 dark:text-white"><%= t('trackers.favorite_food.last_fed_date') %></th>
        </tr>
      </thead>
      <tbody>
        <% @favorite_foods.each do |tracker| %>
          <tr>
            <td class="px-4 py-2 text-center border border-slate-300 dark:text-white"><%= tracker.food_type %></td>
            <td class="px-4 py-2 text-center border border-slate-300 dark:text-white"><%= tracker.brand %></td>
            <td class="px-4 py-2 text-center border border-slate-300 dark:text-white"><%= tracker.description %></td>
            <td class="px-4 py-2 text-center border border-slate-300 dark:text-white"><%= tracker.favorite_score %></td>
            <td class="px-4 py-2 text-center border border-slate-300 dark:text-white"><%= tracker.date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>